# ===========================================
# IAção - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -----------------------------
# Server Configuration
# -----------------------------
NODE_ENV=development
PORT=3000
API_URL=http://localhost:3000

# -----------------------------
# Database
# -----------------------------
DATABASE_URL=postgresql://iacao:iacao@localhost:5432/iacao?schema=public

# -----------------------------
# Redis
# -----------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------
# Authentication
# -----------------------------
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/v1/auth/google/callback

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_CALLBACK_URL=http://localhost:3000/api/v1/auth/microsoft/callback

# -----------------------------
# AI Configuration
# -----------------------------
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini

# Fallback (optional)
ANTHROPIC_API_KEY=your-anthropic-api-key
ANTHROPIC_MODEL=claude-3-haiku-20240307

# AI Rate Limiting
AI_RATE_LIMIT_PER_MINUTE=5
AI_RATE_LIMIT_PER_HOUR=20
AI_RATE_LIMIT_PER_DAY=50

# -----------------------------
# Frontend URLs
# -----------------------------
GAME_CLIENT_URL=http://localhost:8080
DASHBOARD_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:8080,http://localhost:5173

# -----------------------------
# Logging
# -----------------------------
LOG_LEVEL=debug
